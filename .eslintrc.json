{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["node_modules/", "dist/"], 
  "overrides": [
    {
      "files": ["src/**/*.js"], 
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
